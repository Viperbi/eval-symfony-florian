{% extends 'base.html.twig' %} {% block title %}Liste des comptes{% endblock %}
{% block body %}{% if task is defined %}
<div class="grid gap-2 p-2 xl:grid-cols-3 md:grid-cols-2 sm:grid-cols-1">
	{% for task in tasks %}
	<article
		id="{{ task.id }}"
		class="rounded-lg border border-gray-100 bg-white p-4 shadow-xs transition hover:shadow-lg sm:p-6"
	>
		<p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
			{{ task.title }}
		</p>
		<p>
			{{ task.content }}
		</p>
		<p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
			{{ task.createdAt }} | {{ task.expiredAt }}
		</p>
	</article>
	{% endfor %}
</div>
{% endif %} {% if erreur is defined %}
<p>{{ erreur }}</p>
{% endif %} {% endblock %}
